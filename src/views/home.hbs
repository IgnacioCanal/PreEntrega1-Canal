<h1>Lista de Productos</h1>

{{#if products.length}}
  <div class="row">
    {{#each products}}
      <div class="col s12 m6 l4">
        <div class="card small">
          <div class="card-title center-align bold">
            <h4>{{this.nombre}}</h4>
          </div>
          <div class="card-content">
            <p class="content-padding">Precio: ${{this.precio}}</p>
            <p class="content-padding">Categoría: {{this.categoría}}</p>
            <p class="content-padding">Stock: {{this.stock}}</p>
          </div>
          <div class="card-action center-align">
            <a href="#" class="btn btn-custom hoverable">Agregar al carrito</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="pagination">
    {{#if hasPrevPage}}
      <a href="{{prevLink}}" class="btn">Anterior</a>
    {{/if}}
    {{#if hasNextPage}}
      <a href="{{nextLink}}" class="btn">Siguiente</a>
    {{/if}}
  </div>
{{else}}
  <p>No hay productos disponibles.</p>
{{/if}}